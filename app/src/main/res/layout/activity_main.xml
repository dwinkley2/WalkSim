<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/step_count_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:minWidth="120dp"
        android:gravity="center"
        android:drawableEnd="@drawable/ic_steps"
        android:drawablePadding="8dp"
        android:drawableTint="?attr/colorPrimary"
        android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
        tools:text="12,345"
        android:elevation="1dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6" />

    <TextView
        android:id="@+id/remaining_time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_count_display"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:visibility="gone"
        tools:text="1h 12m left"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorSurfaceContainer"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <Button
            android:id="@+id/generate_route_button"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Route From Markers" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/speed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="5 km/h â€¢ 1 h 23 min"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.slider.Slider
                android:id="@+id/speed_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="1.0"
                android:valueTo="20.0"
                android:value="5.0"
                android:stepSize="1.0"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/walk_toggle_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:text="Start Walk"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</RelativeLayout>